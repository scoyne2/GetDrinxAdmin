@Styles.Render("~/Content/UsersTable.css")

<body>

<div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <div class="table-responsive">
                        <table id="users" class="table user-list display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th><span>User</span></th>
                                    <th><span>Last Login</span></th>
                                    <th class="text-center"><span>Login Count</span></th>
                                    <th><span>Email</span></th>
                                    <th style="width: 20%;"><span>Description</span></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var user in ViewBag.users)
                                {
                                  <tr>
                                    <td>
                                        <img src="@user.ImageURL" alt=""> 
                                       @user.FirstName @user.LastName <br /> <span class="user-subhead">@user.Gender</span>
                                    </td>
                                    <td> @user.LastSignInTime</td>
                                    <td class="text-center">
                                        <span class="label label-default">@user.SignInCount</span>
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td style="width: 20%;">
                                        @user.ProfileDescription                                                                        
                                    </td>
                                    <td>
                                        <a href="#" class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i> <i class="fa fa-ban fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </td>
                                    
                              </tr>                                
                                }  
                               

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

 </body>